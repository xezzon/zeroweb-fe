root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 100
spaces_around_operators = true
spaces_around_brackets = outside
continuation_indent_size = 4

[*.{js,ts,jsx}]
curly_bracket_next_line = true
indent_brace_style = K&R
